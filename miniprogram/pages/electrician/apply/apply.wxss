/* 电工申请页面样式 */
.apply-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: white;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E3F2FD;
  border-top: 4rpx solid #2196F3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 主要内容 */
.apply-content {
  padding: 30rpx;
}

/* 申请进度 */
.progress-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.progress-header {
  margin-bottom: 30rpx;
}

.progress-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.progress-steps {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.step-active .step-number {
  background: #2196F3;
  color: white;
}

.step-inactive .step-number {
  background: #E0E0E0;
  color: #999;
}

.step-text {
  font-size: 24rpx;
  color: #666;
}

.step-active .step-text {
  color: #2196F3;
  font-weight: 500;
}

.step-line {
  flex: 1;
  height: 4rpx;
  margin: 0 20rpx;
  margin-bottom: 35rpx;
}

.step-line.step-active {
  background: #2196F3;
}

.step-line.step-inactive {
  background: #E0E0E0;
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.required {
  color: #F44336;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: #FAFAFA;
}

.form-input:focus {
  border-color: #2196F3;
  background: white;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: #FAFAFA;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #2196F3;
  background: white;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 选择器 */
.picker-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  background: #FAFAFA;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 32rpx;
  color: #CCC;
}

/* 单选框 */
.radio-item {
  display: inline-flex;
  align-items: center;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
}

.radio-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

/* 技能标签 */
.skill-tags,
.area-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.skill-tag,
.area-tag {
  padding: 15rpx 25rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  border: 2rpx solid #E0E0E0;
  background: #FAFAFA;
}

.skill-selected,
.area-selected {
  background: #E3F2FD;
  border-color: #2196F3;
  color: #2196F3;
}

.skill-text,
.area-text {
  font-size: 26rpx;
}

/* 上传区域 */
.upload-item {
  margin-bottom: 40rpx;
}

.upload-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.upload-grid {
  display: flex;
  gap: 20rpx;
}

.upload-card {
  flex: 1;
}

.upload-title {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-bottom: 15rpx;
}

.upload-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.upload-placeholder {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #E0E0E0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #FAFAFA;
}

.upload-placeholder:active {
  background: #F0F0F0;
}

.upload-icon {
  font-size: 40rpx;
  color: #CCC;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.upload-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.upload-delete {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 服务承诺 */
.commitment-list {
  margin-bottom: 30rpx;
}

.commitment-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.commitment-icon {
  color: #4CAF50;
  font-size: 28rpx;
  margin-right: 15rpx;
  margin-top: 2rpx;
}

.commitment-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 协议区域 */
.agreement-section {
  padding-top: 30rpx;
  border-top: 1rpx solid #F0F0F0;
}

.agreement-item {
  display: flex;
  align-items: center;
}

.agreement-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 15rpx;
}

.agreement-link {
  color: #2196F3;
  text-decoration: underline;
}

/* 提交区域 */
.submit-section {
  padding: 0 20rpx;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: #2196F3;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  margin-bottom: 20rpx;
}

.submit-btn[disabled] {
  background: #E0E0E0;
}

.submit-btn::after {
  border: none;
}

.submit-text {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.submit-btn[disabled] .submit-text {
  color: #999;
}

.submit-tips {
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .apply-container {
    background: #1A1A1A;
  }
  
  .progress-section,
  .form-section {
    background: #2D2D2D;
  }
  
  .title-text,
  .form-label,
  .picker-text {
    color: #E0E0E0;
  }
  
  .form-input,
  .form-textarea {
    background: #3D3D3D;
    border-color: #555;
    color: #E0E0E0;
  }
  
  .form-input:focus,
  .form-textarea:focus {
    background: #4D4D4D;
  }
  
  .upload-placeholder {
    background: #3D3D3D;
    border-color: #555;
  }
  
  .skill-tag,
  .area-tag {
    background: #3D3D3D;
    border-color: #555;
    color: #E0E0E0;
  }
}