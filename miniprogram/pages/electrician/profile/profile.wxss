/* 电工端个人中心页面样式 */
.profile-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  padding-bottom: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: white;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 主要内容 */
.profile-content {
  padding: 40rpx 30rpx 0;
}

/* 电工信息卡片 */
.electrician-info-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.info-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #E3F2FD;
}

.avatar-edit-icon {
  position: absolute;
  bottom: -5rpx;
  right: -5rpx;
  width: 40rpx;
  height: 40rpx;
  background: #2196F3;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  border: 3rpx solid white;
}

.info-content {
  flex: 1;
}

.name-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.status-active {
  background: #E8F5E8;
  color: #4CAF50;
}

.status-busy {
  background: #FFF3E0;
  color: #FF9800;
}

.status-offline {
  background: #FFEBEE;
  color: #F44336;
}

.phone {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.level-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.level {
  font-size: 26rpx;
  color: #2196F3;
  font-weight: 500;
}

.rating {
  display: flex;
  align-items: center;
}

.rating-score {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF9800;
  margin-right: 5rpx;
}

.rating-star {
  font-size: 24rpx;
}

.service-area {
  font-size: 24rpx;
  color: #999;
}

/* 认证信息 */
.certification-info {
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
  border-top: 1rpx solid #F0F0F0;
}

.cert-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.cert-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.cert-status {
  font-size: 26rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.cert-verified {
  background: #E8F5E8;
  color: #4CAF50;
}

.cert-unverified {
  background: #FFEBEE;
  color: #F44336;
}

/* 电工统计 */
.electrician-stats {
  display: flex;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.stat-item {
  flex: 1;
  padding: 40rpx 20rpx;
  text-align: center;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 1rpx;
  height: 60rpx;
  background: #F0F0F0;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #2196F3;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  background: #E3F2FD;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-bottom: 15rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

.action-badge {
  position: absolute;
  top: -5rpx;
  right: 20rpx;
  background: #F44336;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

/* 菜单区域 */
.menu-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.menu-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #F5F5F5;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  background: #E3F2FD;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 30rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-badge {
  background: #F44336;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.menu-arrow {
  font-size: 32rpx;
  color: #CCC;
}

/* 角色切换 */
.role-switch {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.switch-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.switch-item:active {
  background: #F5F5F5;
}

.switch-icon {
  width: 60rpx;
  height: 60rpx;
  background: #E8F5E8;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 30rpx;
}

.switch-content {
  flex: 1;
}

.switch-title {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.switch-desc {
  font-size: 24rpx;
  color: #999;
}

.switch-arrow {
  font-size: 32rpx;
  color: #CCC;
}

/* 退出登录 */
.logout-section {
  padding: 0 20rpx;
}

.logout-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
}

.logout-btn:active {
  background: rgba(255, 255, 255, 0.1);
}

.logout-text {
  font-size: 30rpx;
  color: white;
}

/* 头像选择弹窗 */
.avatar-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.avatar-modal-content {
  width: 100%;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 40rpx;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.avatar-options {
  margin-bottom: 30rpx;
}

.avatar-option {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.avatar-option:last-child {
  border-bottom: none;
}

.avatar-option:active {
  background: #F5F5F5;
}

.option-icon {
  font-size: 32rpx;
  margin-right: 30rpx;
}

.option-text {
  font-size: 30rpx;
  color: #333;
}

.modal-cancel {
  text-align: center;
  padding: 30rpx;
  font-size: 30rpx;
  color: #999;
  border-top: 1rpx solid #F0F0F0;
}

.modal-cancel:active {
  background: #F5F5F5;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .profile-container {
    background: linear-gradient(135deg, #1565C0 0%, #0D47A1 100%);
  }
  
  .electrician-info-card,
  .electrician-stats,
  .quick-actions,
  .menu-list,
  .role-switch {
    background: #2D2D2D;
  }
  
  .name {
    color: #E0E0E0;
  }
  
  .menu-text,
  .switch-title {
    color: #E0E0E0;
  }
  
  .avatar-modal-content {
    background: #2D2D2D;
  }
  
  .modal-title,
  .option-text {
    color: #E0E0E0;
  }
}