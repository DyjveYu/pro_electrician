/* 电工端工单列表页面样式 */
.orders-container {
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 筛选区域 */
.filter-section {
  background: white;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background: #f5f7fa;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-item.active {
  background: #1976d2;
  color: white;
}

/* 工单列表区域 */
.orders-section {
  padding: 20rpx;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  color: #999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #1976d2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.orders-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.order-item:active {
  transform: scale(0.98);
}

/* 工单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-type {
  display: flex;
  align-items: center;
}

.type-icon {
  width: 40rpx;
  height: 40rpx;
  background: #1976d2;
  color: white;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  font-size: 20rpx;
}

.type-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.order-status.accepted {
  background: #e3f2fd;
  color: #1976d2;
}

.order-status.in_progress {
  background: #fff3e0;
  color: #f57c00;
}

.order-status.completed {
  background: #e8f5e8;
  color: #4caf50;
}

.order-status.cancelled {
  background: #ffebee;
  color: #d32f2f;
}

/* 工单内容 */
.order-content {
  margin-bottom: 20rpx;
}

.order-info {
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.info-row .iconfont {
  width: 32rpx;
  margin-right: 12rpx;
  color: #1976d2;
}

.info-text {
  flex: 1;
}

.urgent-tag {
  background: #d32f2f;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  margin-left: 12rpx;
}

.distance {
  color: #1976d2;
  font-weight: bold;
}

.customer-phone {
  color: #1976d2;
  text-decoration: underline;
}

.order-description {
  background: #f8f9fa;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.order-images {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.problem-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #f5f7fa;
}

.service-time {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  background: #e3f2fd;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #1976d2;
  margin-bottom: 16rpx;
}

.service-time .iconfont {
  margin-right: 8rpx;
}

.repair-progress {
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.progress-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.progress-header .iconfont {
  margin-right: 8rpx;
  color: #1976d2;
}

.progress-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 工单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #e0e0e0;
}

.price-info {
  display: flex;
  align-items: center;
}

.price-label {
  font-size: 26rpx;
  color: #666;
}

.price-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #d32f2f;
  margin-left: 8rpx;
}

.order-actions {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  border: none;
  min-width: 120rpx;
}

.action-btn.primary {
  background: #1976d2;
  color: white;
}

.action-btn.secondary {
  background: #f5f7fa;
  color: #1976d2;
  border: 1rpx solid #1976d2;
}

.action-btn.success {
  background: #4caf50;
  color: white;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.refresh-btn {
  background: #1976d2;
  color: white;
  padding: 16rpx 40rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  border: none;
}

/* 加载更多 */
.load-more {
  padding: 40rpx 0;
  text-align: center;
}

.load-more-btn {
  color: #1976d2;
  font-size: 28rpx;
  padding: 16rpx;
}

.no-more {
  color: #999;
  font-size: 26rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.progress-modal,
.complete-modal {
  background: white;
  border-radius: 16rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  padding: 40rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.progress-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  resize: none;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  resize: none;
}

.upload-images {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.upload-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.upload-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: #f5f7fa;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #d32f2f;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

.upload-btn .iconfont {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 32rpx 40rpx;
  border-top: 1rpx solid #e0e0e0;
}

.modal-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.modal-btn.cancel {
  background: #f5f7fa;
  color: #666;
}

.modal-btn.confirm {
  background: #1976d2;
  color: white;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .orders-container {
    background-color: #121212;
  }
  
  .filter-section {
    background: #1e1e1e;
    border-bottom-color: #333;
  }
  
  .order-item {
    background: #1e1e1e;
    color: #ffffff;
  }
  
  .progress-modal,
  .complete-modal {
    background: #1e1e1e;
  }
  
  .modal-header {
    border-bottom-color: #333;
  }
  
  .modal-footer {
    border-top-color: #333;
  }
  
  .form-input,
  .form-textarea,
  .progress-input {
    background: #2a2a2a;
    border-color: #444;
    color: #ffffff;
  }
}