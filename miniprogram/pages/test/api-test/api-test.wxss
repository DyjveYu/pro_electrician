/* pages/test/api-test/api-test.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 状态显示 */
.status-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.status-item:last-child {
  border-bottom: none;
}

.status-label {
  font-size: 30rpx;
  color: #333;
}

.status-value {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.status-value.success {
  color: #10b981;
  background-color: #ecfdf5;
}

.status-value.error {
  color: #ef4444;
  background-color: #fef2f2;
}

/* 测试区域 */
.test-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #3b82f6;
}

/* 测试按钮 */
.test-btn {
  width: 100%;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-shadow: 0 4rpx 15rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s ease;
}

.test-btn:last-child {
  margin-bottom: 0;
}

.test-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(59, 130, 246, 0.3);
}

.test-btn[disabled] {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
}

.btn-text {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.btn-desc {
  font-size: 24rpx;
  opacity: 0.8;
  font-family: 'Courier New', monospace;
}

/* 输入框 */
.input-group {
  margin-bottom: 20rpx;
}

.test-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #f9fafb;
}

.test-input:focus {
  border-color: #3b82f6;
  background-color: white;
}

/* 结果显示 */
.result-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.result-scroll {
  max-height: 600rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #f8fafc;
}

.result-item {
  padding: 20rpx;
  margin-bottom: 15rpx;
  background: white;
  border-radius: 8rpx;
  border-left: 4rpx solid #3b82f6;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.result-item:last-child {
  margin-bottom: 0;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.result-time {
  font-size: 24rpx;
  color: #6b7280;
}

.result-status {
  font-size: 24rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.result-status.success {
  color: #10b981;
  background-color: #ecfdf5;
}

.result-status.error {
  color: #ef4444;
  background-color: #fef2f2;
}

.result-api {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
  font-family: 'Courier New', monospace;
}

.result-message {
  display: block;
  font-size: 24rpx;
  color: #4b5563;
  margin-bottom: 10rpx;
}

.result-data {
  background-color: #f3f4f6;
  padding: 15rpx;
  border-radius: 6rpx;
  margin-top: 10rpx;
}

.data-label {
  display: block;
  font-size: 22rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.data-content {
  display: block;
  font-size: 22rpx;
  color: #374151;
  font-family: 'Courier New', monospace;
  word-break: break-all;
  line-height: 1.5;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.clear-btn, .refresh-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.clear-btn {
  background-color: #ef4444;
  color: white;
}

.refresh-btn {
  background-color: #10b981;
  color: white;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  padding: 40rpx 60rpx;
  border-radius: 16rpx;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .test-section, .status-section, .result-section {
    padding: 20rpx;
  }
  
  .title {
    font-size: 32rpx;
  }
  
  .subtitle {
    font-size: 24rpx;
  }
}