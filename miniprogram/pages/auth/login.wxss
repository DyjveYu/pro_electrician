/* pages/auth/login.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.header {
  position: relative;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: env(safe-area-inset-top);
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  opacity: 0.9;
}

.header-bg::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

.header-content {
  position: relative;
  z-index: 2;
  text-align: center;
  color: white;
}

.logo {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.logo-icon {
  font-size: 80rpx;
  margin-right: 20rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.logo-text {
  font-size: 48rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.welcome-text {
  font-size: 28rpx;
  opacity: 0.9;
  letter-spacing: 1rpx;
}

/* 登录表单 */
.login-form {
  background-color: white;
  margin: -100rpx 30rpx 30rpx;
  border-radius: 30rpx;
  padding: 60rpx 40rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 3;
}

/* 登录方式切换 */
.login-tabs {
  display: flex;
  background-color: #f8f9fa;
  border-radius: 50rpx;
  padding: 8rpx;
  margin-bottom: 60rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 42rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(33, 150, 243, 0.3);
}

/* 微信登录 */
.wx-login {
  text-align: center;
}

.login-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e3f2fd;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 60rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #1976D2;
}

.wx-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #07C160 0%, #06AD56 100%);
  color: white;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 8rpx 25rpx rgba(7, 193, 96, 0.3);
  margin-bottom: 40rpx;
  transition: all 0.3s ease;
}

.wx-login-btn::after {
  border: none;
}

.wx-login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(7, 193, 96, 0.3);
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.btn-text {
  font-size: 32rpx;
}

/* 手机号登录 */
.phone-login {
  
}

.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.label-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
  color: #2196F3;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 90rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #2196F3;
  background-color: white;
  box-shadow: 0 0 0 6rpx rgba(33, 150, 243, 0.1);
}

.code-input-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.code-input {
  flex: 1;
}

.send-code-btn {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  color: white;
  border-radius: 20rpx;
  padding: 0 30rpx;
  height: 90rpx;
  font-size: 26rpx;
  border: none;
  white-space: nowrap;
  min-width: 160rpx;
}

.send-code-btn::after {
  border: none;
}

.send-code-btn.disabled {
  background-color: #ccc;
  color: #999;
}

.phone-login-btn {
  width: 100%;
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  color: white;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 8rpx 25rpx rgba(33, 150, 243, 0.3);
  margin-bottom: 40rpx;
  transition: all 0.3s ease;
}

.phone-login-btn::after {
  border: none;
}

.phone-login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(33, 150, 243, 0.3);
}

.phone-login-btn.disabled {
  background-color: #ccc;
  color: #999;
  box-shadow: none;
}

/* 用户协议 */
.agreement {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.agreement-checkbox {
  margin-right: 10rpx;
  transform: scale(0.8);
}

.agreement-text {
  margin-right: 5rpx;
}