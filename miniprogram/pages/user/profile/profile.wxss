/* pages/user/profile/profile.wxss */
.container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(25, 118, 210, 0.3);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background-color: rgba(255, 255, 255, 0.1);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 28rpx;
  opacity: 0.8;
  margin-bottom: 12rpx;
}

.user-level {
  display: flex;
  align-items: center;
}

.level-badge {
  padding: 6rpx 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.user-actions {
  margin-left: 20rpx;
}

.edit-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
}

.edit-icon {
  font-size: 24rpx;
}

/* 用户统计 */
.user-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx 0;
}

.stat-item {
  flex: 1;
  text-align: center;
  transition: all 0.3s ease;
}

.stat-item:active {
  transform: scale(0.95);
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  margin: 20rpx 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.9);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #f0f8ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}

/* 菜单部分 */
.menu-section {
  margin: 20rpx 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.menu-list {
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f8f9fa;
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f9fa;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  background-color: #f0f8ff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 6rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999999;
}

.menu-badge {
  background-color: #ff4757;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
  min-width: 32rpx;
  text-align: center;
}

.menu-arrow {
  font-size: 32rpx;
  color: #cccccc;
  margin-left: 12rpx;
}

/* 角色切换 */
.role-switch {
  margin: 20rpx 30rpx;
}

.switch-card {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 6rpx 20rpx rgba(40, 167, 69, 0.3);
}

.switch-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.switch-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.switch-info {
  flex: 1;
}

.switch-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.switch-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.switch-btn {
  padding: 16rpx 32rpx;
  background-color: #ffffff;
  color: #28a745;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  margin-left: 20rpx;
}

.switch-btn:active {
  background-color: #f8f9fa;
}

/* 退出登录 */
.logout-section {
  margin: 40rpx 30rpx 20rpx;
}

.logout-btn {
  width: 100%;
  padding: 24rpx;
  background-color: #ffffff;
  color: #dc3545;
  border: 1rpx solid #dc3545;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.logout-btn:active {
  background-color: #f5c6cb;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 2s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 头像选择弹窗 */
.avatar-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 9999;
}

.avatar-content {
  background-color: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 40rpx 30rpx;
  width: 100%;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.avatar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  text-align: center;
  margin-bottom: 30rpx;
}

.avatar-options {
  margin-bottom: 20rpx;
}

.avatar-option {
  width: 100%;
  padding: 32rpx;
  background-color: #f8f9fa;
  border: none;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.avatar-option:active {
  background-color: #e9ecef;
}

.option-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.option-text {
  font-size: 30rpx;
  color: #333333;
}

.avatar-cancel {
  width: 100%;
  padding: 24rpx;
  background-color: #ffffff;
  color: #666666;
  border: 1rpx solid #e8eaec;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.avatar-cancel:active {
  background-color: #f8f9fa;
}

/* 安全区域 */
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .user-card,
  .quick-actions,
  .menu-section,
  .role-switch,
  .logout-section {
    margin-left: 20rpx;
    margin-right: 20rpx;
  }
  
  .user-card {
    padding: 30rpx 24rpx;
  }
  
  .user-avatar {
    width: 100rpx;
    height: 100rpx;
  }
  
  .user-name {
    font-size: 32rpx;
  }
  
  .menu-item {
    padding: 28rpx 24rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .quick-actions,
  .menu-list {
    background-color: #2d2d2d;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  }
  
  .section-title {
    color: #ffffff;
  }
  
  .menu-item {
    border-bottom-color: #404040;
  }
  
  .menu-item:active {
    background-color: #404040;
  }
  
  .menu-title {
    color: #ffffff;
  }
  
  .menu-desc {
    color: #cccccc;
  }
  
  .action-text {
    color: #cccccc;
  }
  
  .action-icon,
  .menu-icon {
    background-color: #404040;
  }
  
  .logout-btn {
    background-color: #2d2d2d;
    border-color: #dc3545;
  }
  
  .logout-btn:active {
    background-color: #404040;
  }
  
  .avatar-content {
    background-color: #2d2d2d;
  }
  
  .avatar-title {
    color: #ffffff;
  }
  
  .avatar-option {
    background-color: #404040;
  }
  
  .avatar-option:active {
    background-color: #555555;
  }
  
  .option-text {
    color: #ffffff;
  }
  
  .avatar-cancel {
    background-color: #2d2d2d;
    border-color: #404040;
    color: #cccccc;
  }
  
  .avatar-cancel:active {
    background-color: #404040;
  }
  
  .loading-content {
    background-color: #2d2d2d;
  }
}