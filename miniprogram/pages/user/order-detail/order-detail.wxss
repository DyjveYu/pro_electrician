/* pages/user/order-detail/order-detail.wxss */
.container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* 状态卡片 */
.status-card {
  background-color: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.status-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.status-pending {
  background-color: #fff3cd;
}

.status-accepted {
  background-color: #d4edda;
}

.status-confirmed {
  background-color: #cce5ff;
}

.status-completed {
  background-color: #f8d7da;
}

.status-paid {
  background-color: #d1ecf1;
}

.status-cancelled {
  background-color: #f5f5f5;
}

.status-emoji {
  font-size: 32rpx;
}

.status-info {
  flex: 1;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.status-desc {
  font-size: 28rpx;
  color: #666666;
}

/* 进度条 */
.progress-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.progress-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.step-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #e8eaec;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.progress-step.active .step-dot {
  background-color: #1976d2;
  transform: scale(1.2);
}

.progress-step.completed .step-dot {
  background-color: #28a745;
}

.step-label {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.progress-step.active .step-label,
.progress-step.completed .step-label {
  color: #333333;
  font-weight: 500;
}

.progress-line {
  height: 2rpx;
  background-color: #e8eaec;
  flex: 1;
  margin: 0 10rpx;
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
}

.progress-line.active {
  background-color: #1976d2;
}

/* Tab切换 */
.tab-bar {
  background-color: #ffffff;
  display: flex;
  margin: 0 30rpx 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.tab-item {
  flex: 1;
  padding: 24rpx 16rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
}

.tab-item.active {
  background-color: #1976d2;
  color: #ffffff;
  font-weight: 500;
}

/* 内容区域 */
.content-area {
  margin: 0 30rpx;
}

.tab-content {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 信息卡片 */
.info-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f8f9fa;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.info-value.price {
  color: #e53e3e;
  font-weight: 600;
  font-size: 32rpx;
}

/* 地址信息 */
.address-info {
  padding: 30rpx;
}

.address-text {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.contact-info {
  display: flex;
  gap: 20rpx;
}

.contact-name,
.contact-phone {
  font-size: 28rpx;
  color: #666666;
}

.address-actions {
  display: flex;
  gap: 16rpx;
  padding: 0 30rpx 30rpx;
}

/* 描述内容 */
.description-content {
  padding: 30rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

.fault-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 0 30rpx 20rpx;
}

.tag {
  padding: 8rpx 16rpx;
  background-color: #e3f2fd;
  color: #1976d2;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.problem-images {
  padding: 20rpx 30rpx 30rpx;
}

.images-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.problem-image,
.repair-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

/* 电工卡片 */
.electrician-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.electrician-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.electrician-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.electrician-info {
  flex: 1;
}

.electrician-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.electrician-rating {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.rating-score {
  font-size: 28rpx;
  color: #ff9800;
  font-weight: 600;
  margin-right: 8rpx;
}

.rating-stars {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.rating-count {
  font-size: 24rpx;
  color: #999999;
}

.electrician-status {
  display: flex;
  align-items: center;
}

.status-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-badge.online {
  background-color: #d4edda;
  color: #155724;
}

.status-badge.offline {
  background-color: #f8d7da;
  color: #721c24;
}

.electrician-actions {
  margin-left: 20rpx;
}

.electrician-details {
  padding: 30rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 20rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666666;
  flex-shrink: 0;
}

.detail-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

.skills-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.skill-tag {
  padding: 6rpx 12rpx;
  background-color: #f0f8ff;
  color: #1976d2;
  border-radius: 16rpx;
  font-size: 24rpx;
}

/* 时间信息 */
.time-info {
  padding: 30rpx;
}

.time-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.time-item:last-child {
  margin-bottom: 0;
}

.time-label {
  font-size: 28rpx;
  color: #666666;
}

.time-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

/* 维修卡片 */
.repair-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.repair-content {
  padding: 30rpx;
}

.repair-item {
  margin-bottom: 20rpx;
}

.repair-item:last-child {
  margin-bottom: 0;
}

.repair-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 8rpx;
  display: block;
}

.repair-value {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

.repair-images {
  padding: 20rpx 30rpx 30rpx;
}

.images-section {
  margin-bottom: 30rpx;
}

.images-section:last-child {
  margin-bottom: 0;
}

/* 费用卡片 */
.cost-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.cost-list {
  padding: 30rpx;
}

.cost-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.cost-item:last-child {
  margin-bottom: 0;
}

.cost-label {
  font-size: 28rpx;
  color: #666666;
}

.cost-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.cost-item.total .cost-label,
.cost-item.total .cost-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #e53e3e;
}

.cost-divider {
  height: 1rpx;
  background-color: #e8eaec;
  margin: 16rpx 0;
}

/* 评价卡片 */
.evaluation-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.evaluation-content {
  padding: 30rpx;
}

.evaluation-rating {
  margin-bottom: 30rpx;
}

.rating-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.rating-item:last-child {
  margin-bottom: 0;
}

.rating-label {
  font-size: 28rpx;
  color: #666666;
}

.rating-stars {
  display: flex;
  gap: 4rpx;
}

.star {
  font-size: 28rpx;
  color: #e8eaec;
}

.star.active {
  color: #ff9800;
}

.evaluation-comment {
  margin-bottom: 20rpx;
}

.comment-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
  display: block;
}

.comment-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

.evaluation-time {
  text-align: right;
}

.time-text {
  font-size: 24rpx;
  color: #999999;
}

/* 操作按钮 */
.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background-color: #1976d2;
  color: #ffffff;
}

.action-btn.primary:active {
  background-color: #1565c0;
}

.action-btn.secondary {
  background-color: #f8f9fa;
  color: #1976d2;
  border: 1rpx solid #1976d2;
}

.action-btn.secondary:active {
  background-color: #e3f2fd;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #e8eaec;
  display: flex;
  gap: 16rpx;
  z-index: 1000;
}

.action-button {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.action-button.primary {
  background-color: #1976d2;
  color: #ffffff;
}

.action-button.primary:active {
  background-color: #1565c0;
}

.action-button.secondary {
  background-color: #f8f9fa;
  color: #1976d2;
  border: 1rpx solid #1976d2;
}

.action-button.secondary:active {
  background-color: #e3f2fd;
}

.action-button.danger {
  background-color: #dc3545;
  color: #ffffff;
}

.action-button.danger:active {
  background-color: #c82333;
}

.action-button.success {
  background-color: #28a745;
  color: #ffffff;
}

.action-button.success:active {
  background-color: #218838;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 2s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 安全区域 */
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .status-card,
  .info-card,
  .electrician-card,
  .repair-card,
  .cost-card,
  .evaluation-card {
    margin-left: 20rpx;
    margin-right: 20rpx;
    padding: 24rpx;
  }
  
  .content-area {
    margin: 0 20rpx;
  }
  
  .tab-bar {
    margin: 0 20rpx 20rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .status-card,
  .info-card,
  .electrician-card,
  .repair-card,
  .cost-card,
  .evaluation-card,
  .tab-bar {
    background-color: #2d2d2d;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  }
  
  .card-header {
    border-bottom-color: #404040;
  }
  
  .status-title,
  .card-title,
  .info-value,
  .electrician-name,
  .repair-value,
  .cost-value,
  .comment-text {
    color: #ffffff;
  }
  
  .status-desc,
  .info-label,
  .contact-name,
  .contact-phone,
  .repair-label,
  .cost-label,
  .rating-label,
  .comment-title {
    color: #cccccc;
  }
  
  .tab-item {
    background-color: #404040;
    color: #cccccc;
  }
  
  .bottom-actions {
    background-color: #2d2d2d;
    border-top-color: #404040;
  }
  
  .loading-content {
    background-color: #2d2d2d;
  }
}