/* pages/user/orders/orders.wxss */
.container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 筛选栏样式 */
.filter-bar {
  background-color: #ffffff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e8eaec;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
}

.filter-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 50rpx;
  background-color: #f8f9fa;
  color: #666666;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: #1976d2;
  color: #ffffff;
  transform: scale(1.05);
}

.filter-item:last-child {
  margin-right: 0;
}

/* 工单列表样式 */
.order-list {
  padding: 20rpx 30rpx;
}

.order-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.order-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

/* 工单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.order-info {
  flex: 1;
}

.order-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999999;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background-color: #fff3cd;
  color: #856404;
}

.status-accepted {
  background-color: #d4edda;
  color: #155724;
}

.status-confirmed {
  background-color: #cce5ff;
  color: #0066cc;
}

.status-completed {
  background-color: #f8d7da;
  color: #721c24;
}

.status-paid {
  background-color: #d1ecf1;
  color: #0c5460;
}

.status-cancelled {
  background-color: #f5f5f5;
  color: #6c757d;
}

/* 工单内容 */
.order-content {
  margin-bottom: 20rpx;
}

.order-address {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.address-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.address-text {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
}

.order-description {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.order-images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.order-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

/* 电工信息 */
.electrician-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.electrician-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #e9ecef;
}

.electrician-details {
  flex: 1;
}

.electrician-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.electrician-rating {
  display: flex;
  align-items: center;
}

.rating-text {
  font-size: 24rpx;
  color: #666666;
  margin-right: 8rpx;
}

.rating-stars {
  font-size: 24rpx;
}

.contact-btn {
  padding: 12rpx 24rpx;
  background-color: #1976d2;
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 工单底部 */
.order-footer {
  border-top: 1rpx solid #e8eaec;
  padding-top: 20rpx;
}

.order-price {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.price-label {
  font-size: 28rpx;
  color: #666666;
}

.price-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #e53e3e;
  margin-left: 8rpx;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s ease;
}

.primary-btn {
  background-color: #1976d2;
  color: #ffffff;
}

.primary-btn:active {
  background-color: #1565c0;
}

.secondary-btn {
  background-color: #f8f9fa;
  color: #1976d2;
  border: 1rpx solid #1976d2;
}

.secondary-btn:active {
  background-color: #e3f2fd;
}

.cancel-btn {
  background-color: #f8f9fa;
  color: #dc3545;
  border: 1rpx solid #dc3545;
}

.cancel-btn:active {
  background-color: #f5c6cb;
}

.contact-btn {
  background-color: #28a745;
  color: #ffffff;
}

.contact-btn:active {
  background-color: #218838;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.empty-action-btn {
  padding: 20rpx 40rpx;
  background-color: #1976d2;
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 60rpx;
  text-align: center;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 2s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx;
}

.load-more-text {
  font-size: 28rpx;
  color: #999999;
}

.no-more {
  display: flex;
  justify-content: center;
  padding: 40rpx;
}

.no-more-text {
  font-size: 24rpx;
  color: #cccccc;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 60rpx;
  bottom: 160rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #1976d2;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(25, 118, 210, 0.3);
  z-index: 1000;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 12rpx rgba(25, 118, 210, 0.4);
}

.fab-icon {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 300;
}

/* 安全区域 */
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .order-item {
    padding: 24rpx;
  }
  
  .order-title {
    font-size: 30rpx;
  }
  
  .action-btn {
    padding: 14rpx 28rpx;
    font-size: 26rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .filter-bar {
    background-color: #2d2d2d;
    border-bottom-color: #404040;
  }
  
  .filter-item {
    background-color: #404040;
    color: #cccccc;
  }
  
  .order-item {
    background-color: #2d2d2d;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  }
  
  .order-title {
    color: #ffffff;
  }
  
  .order-description {
    color: #cccccc;
  }
  
  .electrician-info {
    background-color: #404040;
  }
  
  .electrician-name {
    color: #ffffff;
  }
  
  .order-footer {
    border-top-color: #404040;
  }
  
  .secondary-btn {
    background-color: #404040;
    border-color: #1976d2;
  }
  
  .cancel-btn {
    background-color: #404040;
    border-color: #dc3545;
  }
}