/* 地图选择页面样式 */
.map-container {
  position: relative;
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
}

/* 地图组件 */
.map-view {
  width: 100%;
  height: 100%;
}

/* 地图中心标记 */
.map-center-marker {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -100%);
  z-index: 10;
}

.marker-icon {
  width: 60rpx;
  height: 80rpx;
}

/* 定位按钮 */
.location-btn {
  position: absolute;
  bottom: 300rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.location-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 搜索容器 */
.search-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 20;
  padding: 20rpx 30rpx;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0));
}

.search-box {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 50rpx;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  height: 80rpx;
}

.search-icon {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  background: #E0E0E0;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.clear-icon {
  font-size: 24rpx;
  color: #666;
}

/* 搜索建议 */
.search-suggestions {
  background: white;
  border-radius: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  max-height: 400rpx;
  overflow-y: auto;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background: #F5F5F5;
}

.suggestion-icon {
  font-size: 28rpx;
  margin-right: 20rpx;
  color: #2196F3;
}

.suggestion-content {
  flex: 1;
}

.suggestion-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.suggestion-address {
  font-size: 24rpx;
  color: #999;
}

/* 地址信息卡片 */
.address-card {
  position: absolute;
  bottom: 160rpx;
  left: 30rpx;
  right: 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  z-index: 15;
  max-height: 400rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.address-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
  color: #2196F3;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.address-info {
  margin-bottom: 20rpx;
}

.address-main {
  margin-bottom: 10rpx;
}

.address-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.address-detail {
  margin-bottom: 10rpx;
}

.address-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 附近地点 */
.nearby-places {
  border-top: 1rpx solid #F0F0F0;
  padding-top: 20rpx;
}

.nearby-title {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.nearby-list {
  white-space: nowrap;
}

.nearby-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 20rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid #E0E0E0;
  background: #FAFAFA;
  min-width: 120rpx;
}

.nearby-selected {
  background: #E3F2FD;
  border-color: #2196F3;
}

.nearby-icon {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.nearby-name {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  white-space: normal;
  word-break: break-all;
}

.nearby-selected .nearby-name {
  color: #2196F3;
  font-weight: 500;
}

/* 底部操作栏 */
.bottom-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 20;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border: none;
}

.cancel-btn {
  background: #F5F5F5;
  color: #666;
}

.cancel-btn:active {
  background: #E0E0E0;
}

.confirm-btn {
  background: #2196F3;
  color: white;
}

.confirm-btn:active {
  background: #1976D2;
}

.confirm-btn[disabled] {
  background: #E0E0E0;
  color: #999;
}

.cancel-btn::after,
.confirm-btn::after {
  border: none;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.loading-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E3F2FD;
  border-top: 4rpx solid #2196F3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误提示 */
.error-toast {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
}

.error-content {
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 30rpx 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  max-width: 500rpx;
}

.error-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
}

.error-text {
  font-size: 26rpx;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .search-box,
  .search-suggestions,
  .address-card,
  .bottom-actions {
    background: #2D2D2D;
  }
  
  .card-title,
  .address-name,
  .suggestion-title {
    color: #E0E0E0;
  }
  
  .address-text,
  .suggestion-address {
    color: #B0B0B0;
  }
  
  .nearby-item {
    background: #3D3D3D;
    border-color: #555;
  }
  
  .nearby-name {
    color: #B0B0B0;
  }
  
  .cancel-btn {
    background: #3D3D3D;
    color: #E0E0E0;
  }
  
  .loading-content {
    background: #2D2D2D;
  }
  
  .loading-text {
    color: #B0B0B0;
  }
}